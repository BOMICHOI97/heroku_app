<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginBottom="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/application_info" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/product_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="바코드"
                android:textSize="18dp"
                android:fontFamily="@font/notokrmedium"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/edit_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:hint="바코드를 입력하시오.(선택)"
                android:textSize="14dp"
                android:fontFamily="@font/notokrregular"
                android:inputType="text"/>
            <Button
                android:id="@+id/codeSearch"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="촬영입력"
                android:background="#B2CCFF"
                android:fontFamily="@font/notokrmedium"
                android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상품명"
                android:textSize="18dp"
                android:fontFamily="@font/notokrmedium"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/edit_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:hint="상품명을 입력하시오."
                android:gravity="center"
                android:textSize="14dp"
                android:fontFamily="@font/notokrregular"
                android:inputType="text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/product_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상품종류"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:textSize="18dp"
                android:fontFamily="@font/notokrmedium"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/edit_type"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:fontFamily="@font/notokrregular" ></Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/product_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="유통기한"
                android:textSize="18dp"
                android:fontFamily="@font/notokrmedium"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/edit_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:hint="유통기한을 입력하시오.(필수)"
                android:gravity="center"
                android:textSize="14dp"
                android:fontFamily="@font/notokrregular"
                android:inputType="text"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:background="#B2CCFF"
            android:fontFamily="@font/notokrmedium"
            android:text="등록하기" />
    </LinearLayout>
</ScrollView>
