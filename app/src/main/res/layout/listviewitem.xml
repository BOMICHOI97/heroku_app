<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="2dp"
        android:background="#ffffff"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal">
            <!--<ImageView
               android:id="@+id/image"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:layout_alignParentLeft="true"
               />-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
               >
                <TextView
                    android:id="@+id/labelL_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상품명 : "
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/labelL_name"
                    android:layout_alignBaseline="@id/labelL_name"
                    />

                <!--android:layout_toRightOf="@id/image"-->
                <TextView
                    android:id="@+id/labelL_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/labelL_name"
                    android:layout_alignLeft="@id/labelL_name"
                    android:text="상품종류 : "
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"/>


                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_toRightOf="@id/labelL_type"
                    android:layout_alignBaseline="@id/labelL_type"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/labelL_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/labelL_type"
                    android:layout_alignLeft="@id/labelL_name"
                    android:text="유통기한 : "
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_toRightOf="@id/labelL_date"
                    android:layout_alignBaseline="@id/labelL_date"
                    android:textSize="15sp" />
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
